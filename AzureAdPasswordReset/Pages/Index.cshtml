@page "{handler?}"
@model IndexModel
@{
    ViewData["Title"] = "Reset a password for a user";
}

<fieldset class="form">
    <legend>Search for a user</legend>
    <table width="500">
        <tr>
            <th></th>
        </tr>
        <tr>
            <td>
                <input class="form-control" id="autocomplete" type="text" style="width:500px" />
            </td>
        </tr>
    </table>
</fieldset>

<br />

<div class="card">
    <h5 class="card-header">
        <span id="docName"></span>
        <span id="docFamilyName"></span>
    </h5>
    <div class="card-body">
        <p class="card-text">Id: <span id="userId"></span></p>
        <p class="card-text">UPN: <span id="userPrincipalName"></span></p>
        <p class="card-text">DisplayName: <span id="userDisplayName"></span></p>
    </div>
</div>

@section scripts
    {
    <script type="text/javascript">
        var items;
        $(document).ready(function () {
            $("input#autocomplete").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "Index/AutoCompleteSuggest",
                        dataType: "json",
                        data: {
                            term: request.term,
                        },
                        success: function (data) {
                            var itemArray = new Array();
                            for (i = 0; i < data.length; i++) {
                                itemArray[i] = {
                                    label: data[i].userPrincipalName,
                                    value: data[i].mail,
                                    data: data[i]
                                }
                            }

                            console.log(itemArray);
                            response(itemArray);
                        },
                        error: function (data, type) {
                            console.log(type);
                        }
                    });
                },
                select: function (event, ui) {
                    $("#userId").text(ui.item.data.id);
                    $("#userDisplayName").text(ui.item.data.displayName);
                    $("#userPrincipalName").text(ui.item.data.userPrincipalName); 
                    console.log(ui.item);
                }
            });
        });
    </script>
}
